@model KurthProject2Vet.ViewModels.VetViewModel

@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Title = "Pet";
}


<h3>Pets </h3>
<a class="btn btn-large btn-success" asp-controller="Pets" asp-action="Create">Add a new pet</a>
<div class="container">
    <div class="row">
        @foreach (var pet in Model.Pets)
        {
            <div class="col-3">
        <li>Name of Pet:<span class="h4"> @pet.Name</span> <br/>  Birthdate: @pet.BirthDate  Type: @pet.Type</li>
            </div>
        }
    </div>
</div>
